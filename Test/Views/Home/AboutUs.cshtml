@{
    ViewData["Title"] = "About Us";
}

<div class="container my-5">
    <!-- Banner eller Jumbotron -->
    <div class="text-center mb-5">
        <h1 class="display-4 text-light">Velkommen til MatPortalen</h1>
        <p class="lead text-secondary">Din pålitelige plattform for sunnere matvalg</p>
    </div>

    <!-- Innholdseksjoner -->
    <div class="row text-light">
        <!-- Vår Misjon -->
        <div class="col-md-6 mb-4">
            <div class="card bg-dark h-100 border-0">
                <div class="card-body">
                    <h2 class="card-title text-info">Vår Misjon</h2>
                    <p class="card-text">
                        Vi ønsker å fremme sunnere matvalg ved å gi enkel tilgang til detaljert produktinformasjon. Gjennom transparens hjelper vi forbrukere med å ta informerte beslutninger.
                    </p>
                </div>
            </div>
        </div>
        
        <!-- Hva Vi Tilbyr -->
        <div class="col-md-6 mb-4">
            <div class="card bg-dark h-100 border-0">
                <div class="card-body">
                    <h2 class="card-title text-info">Hva Vi Tilbyr</h2>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <i class="bi bi-check-circle text-success me-2"></i>
                            <strong>Enkel Registrering:</strong> Opprett en leverandørkonto og begynn å legge inn produkter umiddelbart.
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-check-circle text-success me-2"></i>
                            <strong>Detaljert Produktinfo:</strong> Del ingredienser, næringsinnhold og nøkkelhullsmerket status.
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-check-circle text-success me-2"></i>
                            <strong>Brukervennlig Grensesnitt:</strong> Naviger plattformen med letthet, enten du er leverandør eller forbruker.
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Kontakt Oss -->
        <div class="col-12 mt-4">
            <div class="card bg-secondary text-white border-0">
                <div class="card-body text-center">
                    <h2 class="card-title">Kontakt Oss</h2>
                    <p class="card-text">
                        Har du spørsmål eller trenger hjelp? <a href="/Kontakt" class="text-warning">Kontakt vårt supportteam</a>, så hjelper vi deg gjerne.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
