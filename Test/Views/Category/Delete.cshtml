@model Category

<form method="post" asp-action="Delete">
    <input asp-for="Id" hidden>
    <div class="border p-3 mt-4">
        <div class="row p-2">
            <h2 class="text-primary"> Delete</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-controll" disabled>
            <span asp-validation-for="Name" disabled class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" class="form-controll" disabled>
              <span asp-validation-for="DisplayOrder"  class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-Danger" > Delete</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-Secondary" style="width: 150px;" >
            Back to list 
        </a>
    </div>

</form>

@section Scripts{
@{
    <partial name="_ValidationScriptsPartial.cshtml" />
}

}
