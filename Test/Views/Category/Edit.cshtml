@model Category

<form method="post" asp-action="Edit">
    <div class="border p-3 mt-4">
        <div class="row p-2">
            <h2 class="text-primary"> Edit</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-controll">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" class="form-controll">
              <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-Primary" style="width: 150px; border: 20cm; color:black;" > Update</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-Secondary" style="width: 150px;" >
            Back to list 
        </a>
    </div>

</form>

@section Scripts{
@{
    <partial name="_ValidationScriptsPartial.cshtml" />
}

}
