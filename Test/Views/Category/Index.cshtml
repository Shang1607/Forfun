@model IEnumerable<Category>

@{
    ViewData["Title"] = "Index";
}



<div class="container p-3">
    <div class="row p-4">
        <div class="col-6">
            <h2 class="text-primary"> Category list</h2>
        </div>
        <div class="col-6 text-end" >
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
               <i class="bi bi-plus-square-fill"></i> &nbsp; Create new category
            </a>
        </div>
    </div>
<br /><br /> 

<table class=" table table-border table-striped" style="100%">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Category
            </th>
            <th>
                Display Order
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model ){
            <tr>
                <td width= "50%">
                    @obj.Id
                </td>
                <td width="30%">
                    @obj.Name
                </td>
                <td width="30%">
                    @obj.DisplayOrder
                </td>
                <td width="30%">
                    @obj.
                </td>
            </tr>
        }
    </tbody>
</table>

</div>