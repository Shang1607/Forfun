@model IEnumerable<Category>

@{
    ViewData["Title"] = "Index";
}

<div >
    <h1 class="display-4">Index Category</h1>
</div>

<table class=" table table-border table-striped" style="100%">
    <thead>
        <tr>
            <th>
                Category
            </th>
            <th>
                Display Order
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model ){
            <tr>
                <td width= "50%">
                    @obj.Name
                </td>
                <td width="30%">
                    @obj.DisplayOrder
                </td>
            </tr>
        }
    </tbody>
</table>

