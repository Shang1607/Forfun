@model Test.Models.Product

@{
    ViewData["Title"] = "Slett produkt";
}

<div class="container my-5 text-light">
    <div class="card bg-dark border-danger">
        <div class="card-header bg-danger text-white">
            <h3 class="mb-0"><i class="bi bi-exclamation-triangle-fill me-2"></i>Delete product</h3>
        </div>
        <div class="card-body text-light">
            <h4 class="card-title">Are you sure you want to delete this Product</h4>
            <div class="d-flex align-items-center my-4">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" alt="@Model.Name" class="img-thumbnail me-3" style="max-width: 150px;" />
                }
                <div>
                    <h5>@Model.Name</h5>
                    <p>@Model.Description</p>
                </div>
            </div>
            <form asp-action="Delete" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-end">
                    <a asp-action="Index" class="btn btn-secondary me-2">Cancle</a>
                    <button type="submit" class="btn btn-danger">Delete Product</button>
                </div>
            </form>
        </div>
    </div>
</div>
