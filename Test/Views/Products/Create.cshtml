@model Test.Models.Product

@{
    ViewData["Title"] = "Legg til nytt produkt";
    var categories = ViewBag.Categories as List<Test.Models.Category>;
}

<h1>Legg til nytt produkt</h1>

<form asp-action="Create" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Calories" class="form-label"></label>
        <input asp-for="Calories" class="form-control" type="number" />
        <span asp-validation-for="Calories" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Fat" class="form-label"></label>
        <input asp-for="Fat" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Fat" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Carbohydrates" class="form-label"></label>
        <input asp-for="Carbohydrates" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Carbohydrates" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Protein" class="form-label"></label>
        <input asp-for="Protein" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Protein" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label"><strong>Kategorier:</strong></label>
        <div>
            @foreach (var category in categories)
            {
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="selectedCategories" value="@category.Id" id="category_@category.Id" />
                    <label class="form-check-label" for="category_@category.Id">
                    @if (category.IsKeyhole)
                {
                <strong>@category.Name</strong> <!-- Gjør teksten femer synlig for nøkkelhullt -->
                }
                else
                {
                @category.Name
                }
                </label>
            </div>
            }
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Lagre</button>
    <a asp-action="Index" class="btn btn-secondary">Avbryt</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
