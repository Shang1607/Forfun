@{
    ViewData["Title"] = "Home Page";
}

<div class="hero-section text-center text-white d-flex align-items-center" style="background-image: url('~C:\Users\kakas\OneDrive\Skrivebord\anvendt data teknologi\3.året\termin 1\web aplikasjoner\Forfun\Test\wwwroot\Images\hero-background.jpgs'); background-size: cover; height: 80vh;">
    <div class="container">
        <h1 class="display-4">Velkommen til Matvareportalen</h1>
        <p class="lead">Enkelt system for bedrifter å administrere matvarer</p>
        <a asp-controller="Account" asp-action="Signup" class="btn btn-primary btn-lg mt-3">Kom i gang</a>
    </div>
</div>

<div class="search-section py-5">
    <div class="container">
        <h2 class="text-center mb-4">Søk etter produkter</h2>
        <form asp-controller="Home" asp-action="Search" method="get" class="d-flex justify-content-center">
            <input type="text" name="query" class="form-control w-50 me-2" placeholder="Skriv inn produktnavn..." />
            <button type="submit" class="btn btn-primary">Søk</button>
        </form>
    </div>
</div>

<div class="features-section py-5 bg-light">
    <div class="container">
        <h2 class="text-center mb-5">Våre funksjoner</h2>
        <div class="row text-center">
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <i class="bi bi-box-seam feature-icon display-4 mb-3"></i>
                        <h3 class="card-title">Legg til produkter</h3>
                        <p class="card-text">Effektivt verktøy for å legge til nye matvarer.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <i class="bi bi-pencil-square feature-icon display-4 mb-3"></i>
                        <h3 class="card-title">Rediger informasjon</h3>
                        <p class="card-text">Hold informasjonen oppdatert med enkel redigering.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <i class="bi bi-bar-chart feature-icon display-4 mb-3"></i>
                        <h3 class="card-title">Analyser data</h3>
                        <p class="card-text">Få innsikt i produktene dine med detaljerte analyser.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

