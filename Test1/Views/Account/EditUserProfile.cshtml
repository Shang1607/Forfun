@model EditProfileViewModel

<div class="container mt-5">
    <h1>Rediger Profil</h1>
    <form asp-action="EditProfile" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="mb-3">
            <label asp-for="CompanyName" class="form-label">Firmanavn</label>
            <input asp-for="CompanyName" class="form-control" />
            <span asp-validation-for="CompanyName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Bio" class="form-label">Biografi</label>
            <textarea asp-for="Bio" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Bio" class="text-danger"></span>
        </div>

        <!-- Vis eksisterende profilbilde -->
        <div class="mb-3">
            <p><strong>Nåværende Profilbilde:</strong></p>
            @if (!string.IsNullOrEmpty(Model.ExistingProfileImageUrl))
            {
                <img src="@Model.ExistingProfileImageUrl" alt="Profilbilde" class="img-thumbnail" style="width: 150px;">
            }
            else
            {
                <p>Ingen profilbilde lastet opp.</p>
            }
        </div>

        <!-- Opplasting av nytt profilbilde -->
        <div class="mb-3">
            <label for="ProfileImage" class="form-label">Last opp nytt profilbilde</label>
            <input type="file" name="ProfileImage" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary">Lagre Endringer</button>
        <a asp-action="UserProfile" class="btn btn-secondary">Avbryt</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
