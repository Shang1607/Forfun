@model User

<div class="auth-container">
    <div class="row">
        <div class="col-md-6 offset-md-3 signup-section">
            <h2>Registrer</h2>
            <form asp-action="Signup" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="mb-3">
                    <label asp-for="CompanyName" class="form-label">Company Name</label>
                    <input asp-for="CompanyName" class="form-control" />
                    <span asp-validation-for="CompanyName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Email" class="form-label">E-Mail</label>
                    <input asp-for="Email" class="form-control" type="email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Password</label>
                    <input asp-for="Password" class="form-control" type="password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Registrer deg</button>
            </form>
            <hr />
            <p>Do you already have an account?</p>
            <a asp-controller="Account" asp-action="Login" class="btn btn-secondary">Logg Inn</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
